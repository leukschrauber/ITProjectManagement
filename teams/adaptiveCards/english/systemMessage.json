{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "${answer}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "You have rated this conversation as positive.",
      "wrap": true,
      "isVisible": "${positiveRatingVisible}"
    },
    {
      "type": "TextBlock",
      "text": "You have rated this conversation as negative.",
      "isVisible": "${negativeRatingVisible}"
    },
    {
      "type": "TextBlock",
      "text": "You have requested to continue this conversation.",
      "wrap": true,
      "isVisible": "${continueConversationTextVisible}"
    },
    {
      "type": "ActionSet",
      "isVisible": "${buttonsVisible}",
      "actions": [
        {
          "type": "Action.Execute",
          "id": "${answer}",
          "title": "Continue conversation",
          "verb": "continueConversation"
        },
        {
          "type": "Action.Execute",
          "id": "${answer}",
          "title": "This did not help. üëé",
          "verb": "negativeRating"
        },
        {
          "type": "Action.Execute",
          "id": "${answer}",
          "title": "Well done, HT-Bot! üëç",
          "verb": "positiveRating"
        }
      ]
  }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}