{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "${answer}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "You have rated this conversation as positive.",
      "wrap": true,
      "isVisible": "${positiveRatingVisible}"
    },
    {
      "type": "TextBlock",
      "text": "You have rated this conversation as negative.",
      "isVisible": "${negativeRatingVisible}"
    },
    {
      "type": "TextBlock",
      "text": "You have requested to continue this conversation.",
      "wrap": true,
      "isVisible": "${continueConversationTextVisible}"
    },
    {
      "type": "TextBlock",
      "text": "${incidentReport}",
      "wrap": true,
      "isVisible": "${incidentReportVisible}"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Continua la conversazione",
      "verb": "continueConversation",
      "isVisible": "${buttonsVisible}"
    },
    {
      "type": "Action.Execute",
      "title": "Non hai aiutato. üëé",
      "verb": "negativeRating",
      "isVisible": "${buttonsVisible}"
    },
    {
      "type": "Action.Execute",
      "title": "Ben fatto, HT-Bot! üëç",
      "verb": "positiveRating",
      "isVisible": "${buttonsVisible}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}
